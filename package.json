{
  "name": "ngchile-packages",
  "private": false,
  "devDependencies": {
    "commitizen": "^4.0.3",
    "conventional-changelog": "^3.1.18",
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.1.0",
    "lerna": "^3.19.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
