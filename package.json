{
  "name": "ngchile-packages",
  "description": "Angular Chile Packages for Angular 8+",
  "repository": {
    "type": "git",
    "url": "https://github.com/ngChile/ngchile-packages.git"
  },
  "keywords": [
    "angular",
    "cypress",
    "e2e",
    "cucumber",
    "gherkins"
  ],
  "license": "MIT",
  "private": false,
  "scripts": {
    "update-contributors": "all-contributors generate"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "devDependencies": {
    "all-contributors-cli": "^6.11.2",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^3.1.0",
    "lerna": "^3.19.0"
  }
}
